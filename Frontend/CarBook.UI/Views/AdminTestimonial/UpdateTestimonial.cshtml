@model UpdateTestimonialViewModel

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <input type="hidden" asp-for="TestimonialID"/>
    <label>Referans Resim Yolu</label>
    <input type="text" asp-for="Image" class="form-control"/>
    <span asp-validation-for="Image" class="text-danger"></span>
    <br />

    <label>Referans Açıklama</label>
    <input type="text" asp-for="Description" class="form-control"/>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <label>Referans İsmi</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />

  
 
   
    <button class="btn btn-warning">Referans Güncelle</button>




</form>



