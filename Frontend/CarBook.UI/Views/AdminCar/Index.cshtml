@model List<ResultCarViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Araba İsmi</th>
        <th>Araba Markası</th>
        <th>Araba Fiyatı</th>
        <th>Sil </th>
        <th>Güncelle</th>




    </tr>
    @foreach (var item in Model)
    {
        <tr>

             <td>@item.CarID</td>
             <td>@item.CoverImage</td>
             <td>@item.Name</td>
             <td>@item.Brand</td>
             <td>@item.Price</td>
             <td><a href="/AdminCar/DeleteCar/@item.CarID" class="btn btn-danger">Sil</a></td>
             <td><a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-success">Güncelle</a></td>
         


        </tr>
    }


</table>

<a href="/AdminCar/AddCar/" class="btn btn-info">Yeni Araba Girişi</a>

