@model CreateRentCarViewModel

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12	featured-top">
                <div class="row no-gutters">
                    <div class="col-md-12 d-flex align-items-center">
                        <form method="post" class="request-form ftco-animate bg-primary d-flex flex-column" style="margin-left: 220px ; width:700px">
                            <h2>Aracınızı Kiralayın</h2>

                            
                             <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">İSİM</label>
                                    <input type="text" class="form-control" placeholder="İsim" asp-for="Name">
                                </div>

                                 <div class="form-group ml-2">
                                    <label for="" class="label">Telefon Numarası</label>
                                    <input type="text" class="form-control" placeholder="Telefon Numarası" asp-for="PhoneNumber">
                                </div>
                             </div>                              
            

                            <div class="d-flex">
                                 <div class="form-group">
                                    <label for="" class="label">MAİL ADRESİ</label>
                                    <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Mail">
                                </div>
                                 <div class="form-group ml-2">
                                    <label for="" class="label">Araç Şeçiniz</label>
                                    <input type="text" class="form-control" placeholder="Araç Seçiniz" asp-for="Car">
                                </div>
                            </div>   

                       



                             <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Kalkış Lokasyonu</label>
                                    <input type="text" class="form-control" placeholder="Şehir, Havalimanı, İstasyon, vb" asp-for="PickUpLocation">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Varış Lokasyonu</label>
                                    <input type="text" class="form-control" placeholder="Şehir, Havalimanı, İstasyon, vb" asp-for="DropOffLocation">
                                </div>
                              </div>  



                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Alış TARİHİ</label>
                                    <input type="date" class="form-control"  placeholder="Tarih" asp-for="PickUpDate">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Varış TARİHİ</label>
                                    <input type="date" class="form-control"  placeholder="Tarih" asp-for="DropOffDate">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="Şimdi Aracınızı Kiralayın" class="btn btn-dark py-3 px-4 text ">
                            </div>
                        </form>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
</section>