@model List<ResultCarViewModel>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                
           

            <div class="col-md-4">
                <div class="car-wrap rounded ftco-animate">
                    <div class="img rounded d-flex align-items-end"
                        style="background-image: url(@item.CoverImage);">
                    </div>
                    <div class="text">
                        <h2 class="mb-0"><a href="car-single.html">@item.Name</a></h2>
                        <div class="d-flex mb-3">
                            <span class="cat">@item.Brand</span>
                            <p class="price ml-auto">₺@item.Price <span>/günlük</span></p>
                        </div>
                        <p class="d-flex mb-0 d-block"><a href="/RentCar/Index/" class="btn btn-primary py-2 mr-1">Şimdi Kirala</a> <a
                                href="/Detail/Index/" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                    </div>
                </div>
            </div>
             }



        </div>

    </div>
</section>