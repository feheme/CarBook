@model List<ResultCarViewModel>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Biz Ne Sunuyoruz</span>
                <h2 class="mb-2">Öne Çıkan Araçlarımız </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">

                    @foreach (var item in Model)
                    {                     
                 
                    
                    <div class="item">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end"
                                style="background-image: url(@item.CoverImage);">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="#">@item.Name</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@item.Brand</span>
                                    <p class="price ml-auto">@item.Price <span>/gün</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block"><a href="/RentCar/Index/" class="btn btn-primary py-2 mr-1">Şimdi Kirala
                                        </a> <a href="/Detail/Index/" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>